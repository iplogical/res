<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Label fx:id="root" onDragDetected="#onTableDragged" onMouseClicked="#onTableClicked" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <graphic>
      <StackPane>
         <children>
            <VBox fx:id="vBox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="80.0" minWidth="80.0" prefHeight="80.0" prefWidth="80.0" style="-fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #ffffff; -fx-background-radius: 5;">
               <children>
                  <Label fx:id="name" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-line-spacing: -5;" text="%Table.Name" textAlignment="CENTER" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="-10.0" top="-10.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="number" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%Table.Number">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="-8.0" top="-8.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="40.0" spacing="2.0">
                     <children>
                        <Label fx:id="guests" text="%Table.Guests" />
                        <Label text="/" />
                        <Label fx:id="capacity" text="%Table.Capacity" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="-10.0" top="-10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="BOTTOM_RIGHT">
               <children>
                  <HBox alignment="BOTTOM_RIGHT">
                     <children>
                        <ImageView fx:id="note" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/sticky_note.png" />
                           </image>
                           <HBox.margin>
                              <Insets bottom="5.0" right="5.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                  </HBox>
               </children>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </VBox>
         </children>
      </StackPane>
   </graphic>
</Label>
