<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Label fx:id="rootTable" onMouseClicked="#onTableClicked" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../css/Table.css" />
   </stylesheets>
   <graphic>
      <AnchorPane fx:id="tableContainer">
         <children>
            <StackPane fx:id="tableStackPane" minHeight="80.0" minWidth="80.0" prefHeight="80.0" prefWidth="80.0" style="-fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #ffffff; -fx-background-radius: 5;">
               <children>
                  <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                     <children>
                        <Label fx:id="name" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="40.0" styleClass="tableName" text="%Table.Name" textAlignment="CENTER" wrapText="true">
                           <VBox.margin>
                              <Insets bottom="-10.0" top="-10.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="number" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="40.0" styleClass="tableNumber" text="%Table.Number" textAlignment="CENTER">
                           <VBox.margin>
                              <Insets bottom="-8.0" top="-8.0" />
                           </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="40.0">
                           <children>
                              <Label fx:id="guests" text="%Table.Guests" />
                              <Label text="/" />
                              <Label fx:id="capacity" text="%Table.Capacity" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="-10.0" top="-10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="BOTTOM_RIGHT">
                     <children>
                        <HBox alignment="BOTTOM_RIGHT">
                           <children>
                              <ImageView fx:id="note" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/sticky_note.png" />
                                 </image>
                                 <HBox.margin>
                                    <Insets bottom="2.0" right="2.0" />
                                 </HBox.margin>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </VBox>
                  <VBox alignment="BOTTOM_RIGHT">
                     <children>
                        <HBox alignment="BOTTOM_LEFT">
                           <children>
                              <ImageView fx:id="meeple" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/meeple.png" />
                                 </image>
                                 <HBox.margin>
                                    <Insets bottom="2.0" left="2.0" />
                                 </HBox.margin>
                                 <effect>
                                    <Blend mode="SRC_ATOP">
                                       <topInput>
                                          <ColorInput height="18.0" paint="#005f7f" width="18.0" />
                                       </topInput>
                                    </Blend>
                                 </effect>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="BOTTOM_RIGHT">
                     <children>
                        <HBox alignment="BOTTOM_LEFT">
                           <children>
                              <Label fx:id="hosted" alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="18.0" styleClass="loiterers" text="0" textAlignment="CENTER" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="10.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets bottom="2.0" left="2.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </AnchorPane>
   </graphic>
</Label>
