<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence 
                http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    
    <persistence-unit name="TestPersistance"  transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
        <!-- entities -->
        <class>com.inspirationlogical.receipt.model.Product</class>
        <class>com.inspirationlogical.receipt.model.ProductCategory</class>
        <class>com.inspirationlogical.receipt.model.Recipe</class>
        <class>com.inspirationlogical.receipt.model.Stock</class>
        <class>com.inspirationlogical.receipt.model.Receipt</class>
        <class>com.inspirationlogical.receipt.model.Table</class>
        <class>com.inspirationlogical.receipt.model.Restaurant</class>
        <class>com.inspirationlogical.receipt.model.ReceiptRecord</class>
        <!--          -->

        <properties>
            <property name="javax.persistence.jdbc.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ReceiptSchemaTest"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="test"/>
            <property name="javax.persistence.jdbc.show_sql" value="true"/>
        <!-- entities -->
            <property name="hbm2ddl.auto" value="create"/>
        <!--          -->
            <property name="javax.persistence.schema-generation.database.action"
                  value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
